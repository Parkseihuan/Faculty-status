# 서버 설정
PORT=3000
NODE_ENV=production

# MongoDB 연결 (필수!)
# MongoDB Atlas에서 발급받은 연결 문자열
# 예: mongodb+srv://username:password@cluster.mongodb.net/faculty-status?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/faculty-status

# JWT 비밀 키 (최소 32자 이상 권장)
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters

# CORS 설정
# 프론트엔드 URL (GitHub Pages URL)
# 예: https://parkseihuan.github.io
FRONTEND_URL=https://parkseihuan.github.io

# 파일 업로드 최대 크기 (MB)
MAX_FILE_SIZE=10
